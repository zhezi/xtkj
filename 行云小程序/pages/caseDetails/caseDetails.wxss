/* pages/caseDetails/caseDetails.wxss */
page{
  background: #fff;
}

.details{
  padding: 28rpx 50rpx;
  line-height: 36rpx;
  font-size: 26rpx;
}
.details .away{
  padding: 18rpx 0 36rpx;
}
.content{
  color: rgba(0, 0, 0, 0.4);
}
.fixed-bottom{
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 60rpx 50rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  text-align: center;
}
.fixed-bottom .button{
  min-width: 182rpx;
}

.pages{
  display: flex;
  align-items: center;
}
.pages .navigator{
  padding: 0 10rpx;
}
.pages .active{
  color: #2F77D6;
}