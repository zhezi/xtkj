/* pages/history/history.wxss */
page {
  background: #fff;
}

.tab {
  padding: 24rpx 46rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.tab text {
  font-size: 26rpx;
  line-height: 44rpx;
  border-radius: 4rpx;
  width: 128rpx;
  display: inline-block;
  text-align: center;
}

.tab .active {
  background: #2F77D6;
  color: #fff;
}

.container {
  padding: 0 46rpx 40rpx;
}

.box {
  padding: 20rpx 26rpx 0 38rpx;
  min-height: 180rpx;
  margin: 40rpx 0 0;
  color: #fff;
  background: linear-gradient(142deg, #4293FF 0%, #2F77D6 100%);
  box-shadow: 0px 6rpx 24rpx 0px rgba(47, 119, 214, 0.44);
  border-radius: 8px;
  background: linear-gradient(142deg, #4293FF 0%, #2F77D6 100%);
  box-shadow: 0px 6rpx 24rpx 0px rgba(47, 119, 214, 0.44);
  border-radius: 8rpx;
}

.swipe-cell-red .box {
  background: linear-gradient(142deg, #FF6C6C 0%, #F14747 100%);
  box-shadow: 0px 6rpx 24rpx 0px rgba(248, 88, 88, 0.49);
}

.caption {
  display: flex;
  justify-content: space-between;
  line-height: 40rpx;
  font-size: 28rpx;
}
.times image{
  width: 30rpx;
  margin: 0 16rpx 0 0;
}
.name {
  padding: 16rpx 0 22rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 44rpx;
}

.wait {
  text-align: right;
  line-height: 52rpx;
  font-size: 26rpx;
}

.item{
  display: flex;
}
.item .btn{
  width: 57px;
  height: 200rpx;
  padding: 44rpx 16px 0;
  display: block;
  box-sizing: border-box;
  font-size: 12px;
  text-align: center;
  margin: 0 0 0 6px;
  background: #D2E6FF;
  border-radius: 8rpx;
}
.item image {
  width: 16px;
  margin: 0 0 22rpx;
}
.item .btn-red{
background: #FFD8D2;
}