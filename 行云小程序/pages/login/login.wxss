.container {
  position: fixed;
  width: 100%;
  height: 100%;
  background-position: center center;
  background-size: cover;
  color: #fff;
  text-align: center;
}

.logo {
  width: 196rpx;
  margin: 232rpx auto 100rpx;
}

.h1 {
  line-height: 58rpx;
  font-size: 48rpx;
}

.h2 {
  line-height: 34rpx;
  font-size: 28rpx;
  padding: 14rpx 0 96rpx;
}

.button {
  min-width: 600rpx;
  line-height: 84rpx;
  padding: 0;
  background: #FFFFFF;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #2F77D6;
  margin: 0 0 24rpx;
  font-weight: normal;
}

.point {
  font-size: 24rpx;
}

