/* pages/bankBill/bankBill.wxss */
.container{
  padding: 50rpx 44rpx;
}
.point{
  color: #fff;
  line-height: 40rpx;
  font-size: 28rpx;
}
.box{
  background: #fff;
  margin: 40rpx 0 100rpx;
  padding: 40rpx 40rpx 58rpx;
  border-radius: 8rpx;
}
.box .h2{
  font-size: 32rpx;
  line-height: 44rpx;
  font-weight: 500;
  padding: 0 0 26rpx;
}
.upload-box{
  display: flex;
  justify-content: space-between;
}
.text{
  color:rgba(0, 0, 0, 0.59);
  font-size: 28rpx;
  line-height: 40rpx;
}
.upload{
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin: 0 26rpx 0 0;
}
.upload .upload-img{
  width: 120rpx;
}
.upload-btn{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.item{
  padding: 0 0 40rpx;
  margin: 0 0 38rpx;
  border-bottom:1px solid rgba(0, 0, 0, 0.1);
}
.radio-box .label{
  display: flex;
  justify-content: space-between;
  padding: 14px 0 26rpx;
  align-items: center;
  color: rgba(0, 0, 0, 0.59);
  font-size: 32rpx;
  line-height: 44rpx;
}
.radio-box .label:last-child{
  padding: 12px 0 16rpx;
}
.radio-box label{
  display: flex;
  align-items: center;
}
.radio-box text{
  flex:1;
  text-align: right;
  font-size: 28rpx;
}
.radio-box radio{
  margin: 0 12rpx 0 0;
}
radio .wx-radio-input.wx-radio-input-checked {
  border-color: #2F77D6!important;
  background-color: #2F77D6!important;
}
